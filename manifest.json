{
  "manifest_version": 3,
  "name": "Grid Overlay",
  "version": "2.0.0",
  "description": "Professional grid overlay tool with responsive breakpoints - like Figma grids for the web",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/main.css"],
      "run_at": "document_end"
    }
  ]
}
