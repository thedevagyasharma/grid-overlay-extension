{
  "manifest_version": 3,
  "name": "Grid Overlay",
  "version": "2.2.0",
  "description": "Professional grid overlay tool with responsive breakpoints - like Figma grids for the web",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/utils/helpers.js",
        "js/utils/icons.js",
        "js/state.js",
        "js/storage.js",
        "js/GridRenderer.js",
        "js/components/PopupFrame.js",
        "js/components/ColorPickerPopup.js",
        "js/components/ColorPicker.js",
        "js/components/ConfirmDialog.js",
        "js/components/EditableHeader.js",
        "js/screens/PresetsScreen.js",
        "js/screens/BreakpointsScreen.js",
        "js/screens/BreakpointEditPopup.js",
        "js/screens/KeyboardShortcutsPopup.js",
        "js/ViewRouter.js",
        "content.js"
      ],
      "css": ["styles/main.css"],
      "run_at": "document_end"
    }
  ]
}
